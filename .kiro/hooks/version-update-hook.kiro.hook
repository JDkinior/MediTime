{
  "enabled": true,
  "name": "Version Update Hook",
  "description": "Automatically updates the application version whenever changes are made to pubspec.yaml",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "pubspec.yaml"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "Update the version number in pubspec.yaml where it displays the current app version. Increment the version appropriately based on the type of changes made."
  }
}